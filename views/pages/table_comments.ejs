<!DOCTYPE html>
<html lang="en">

<head>
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Notes Management</title>
	<!-- plugins:css -->
	<%- include ("../partials/_plugins_css.ejs") %>
	<!-- endinject -->
	<!-- plugin css for this page -->
	<!-- End plugin css for this page -->
	<!-- inject:css -->
	<link rel="stylesheet" href="/assets/css/shared/style.css">
	<!-- endinject -->
	<!-- Layout styles -->
	<link rel="stylesheet" href="/assets/css/shared/dashboard-style.css">
	<!-- End Layout styles -->
	<link rel="shortcut icon" href="/assets/images/favicon.png" />

	<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
	<script src="/script/clientLib.js"></script>
</head>

<body>
	<div class="container-scroller">
		<!-- partial:partials/_navbar.html -->
		<%- include ("../partials/_navbar.ejs") %>
		<!-- partial -->
		<div class="container-fluid page-body-wrapper">
			<!-- partial:partials/_sidebar.html -->
			<%- include ("../partials/_sidebar.ejs") %>
			<!-- partial -->
			<div class="main-panel">
				<div class="content-wrapper">
					<!-- Page Title Header Starts-->
					<div class="row page-title-header">
						<div class="col-12">
							<div class="page-header">
								<h4 class="page-title">User&nbsp;Notes</h4>
								<div class="quick-link-wrapper w-100 d-md-flex flex-md-wrap">

								</div>
							</div>
						</div>
						<div class="col-md-12">
							<div class="page-header-toolbar">

								<div class="sort-wrapper">
									<!--									<form action="/table" method="get">-->
									<button type="submit" class="btn btn-secondary toolbar-item"
										onclick="javascript:history.go(-1)">Back
									</button>
									<!--									</form>-->
								</div>




							</div>
						</div>
					</div>
					<!-- Page Title Header Ends-->


					<div class="row">

						<% rows.forEach(function(r) { %>
						<div class="col-lg-12 grid-margin stretch-card">

							<div class="card">
								<div class="card-body">
									<h4 class="card-title">Note <%= r.comment_id %>
									</h4>
									<form class="form-sample">
										<div class="row">
											<div class="col-md-6">
												<div class="form-group row">
													<label class="col-sm-3 col-form-label">User</label>
													<div class="col-sm-9">
														<input type="text" class="form-control" value="<%= r.name %>"
															readonly />
													</div>
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group row">
													<label class="col-sm-3 col-form-label">User ID</label>
													<div class="col-sm-9">
														<input type="text" class="form-control" value="<%= r.uid %>"
															readonly />
													</div>
												</div>
											</div>
										</div>
										<div class="row">
											<div class="col-md-6">
												<div class="form-group row">
													<label class="col-sm-3 col-form-label">Session ID</label>
													<div class="col-sm-9">
														<input type="text" class="form-control"
															value="<%= r.session_id %>" readonly />
													</div>
												</div>
											</div>
											<div class="col-md-6">
												<div class="form-group row">
													<label class="col-sm-3 col-form-label">Note ID</label>
													<div class="col-sm-9">
														<input type="text" class="form-control"
															value="<%= r.comment_id %>" readonly />
													</div>
												</div>
											</div>
										</div>
										<div class="row">
											<div class="col-md-6">
												<div class="form-group row">
													<label class="col-sm-3 col-form-label">Time</label>
													<div class="col-sm-9">
														<input type="text" class="form-control" value="<%= r.ts %>"
															readonly />
													</div>
												</div>
											</div>
										</div>


										<p class="card-description"> Note </p>
										<div class="row">
											<div class="col-md-12">
												<div class="form-group row">
													<!--                            <label class="col-sm-3 col-form-label">Category</label>-->
													<div class="col-sm-12">
														<textarea class="form-control" id="exampleTextarea1" rows="3"
															readonly><%= r.comment %></textarea>
													</div>
												</div>
											</div>

										</div>



									</form>
									<form action="/delete_comment/<%= r.comment_id %>" method="post">
										<button id="delete_button" type="submit"
											class="btn btn-danger mr-2">Delete</button>

									</form>
								</div>
							</div>

						</div>
						<% }); %>






					</div>
				</div>
			</div>







		</div>
		<!-- content-wrapper ends -->
		<!-- partial:partials/_footer.html -->
		<%- include ("../partials/_footer.ejs") %>
		<!-- partial -->
	</div>
	<!-- main-panel ends -->
	</div>
	<!-- page-body-wrapper ends -->
	</div>
	<!-- container-scroller -->
	<!-- plugins:js -->
	<%- include ("../partials/_plugins_js.ejs") %>
	<!-- endinject -->
	<!-- Plugin js for this page-->
	<!-- End plugin js for this page-->
	<!-- inject:js -->
	<script src="/assets/js/shared/off-canvas.js"></script>
	<script src="/assets/js/shared/misc.js"></script>
	<!-- endinject -->
	<!-- Custom js for this page-->
	<script src="/assets/js/shared/dashboard.js"></script>
	<!-- End custom js for this page-->

</body>


</html>