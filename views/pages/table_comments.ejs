<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>User Comments</title>
  <link rel="stylesheet" href="./stylesheets/table.css">
  <link href="./stylesheets/button.css" rel="stylesheet" type="text/css">
</head>

<body class="main_body">
  <header>
    <form action="/logout" method="get">
      <input type="submit" value="Logout" id="logout_button">
    </form>
    <form action="/table" method="get">
      <input type="submit" value="admin page" id="video_button">
    </form>
  </header>

  <div class="container">
    <h1>User Comments</h1>
    <table>
      <thead>
        <tr>
          <th>Session ID </th>
          <th>Comment ID</th>
          <th>User Uid</th>
          <th>Name</th>
          <th>Time</th>
          <th>Comment</th>
        </tr>
        <thead>
          <% rows.forEach(function(r) { %>
            <tr>
              <td class="col col-1" data-label="Session ID">
                <%= r.session_id %>
              </td>
              <td class="col col-2" data-label="Comment ID">
                <%= r.comment_id %>
              </td>
              <td class="col col-3" data-label="UID">
                <%= r.uid %>
              </td>
              <td class="col col-4" data-label="Name">
                <%= r.name %>
              </td>
              <td class="col col-5" data-label="Time">
                <%= r.ts %>
              </td>
              <td class="col col-6" data-label="Comment">
                <%= r.comment %>
              </td>
              <td>
                <form action="/delete_comment/<%= r.comment_id %>" method="post">
                  <input id="delete_button" type="submit" value="Delete">
                </form>
              </td>
            </tr>
            <% }); %>
    </table>



</body>

</html>