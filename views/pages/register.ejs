    <body>
        <div class="background">
            <div class="shape"></div>
            <div class="shape"></div>
        </div>

        <div class = "input_info">
            <h3>Register Here</h3>
            <form action="/create_account/" method="post">
                <label for="name">Username</label>
                <input type="text" placeholder="Username" id="name" step = "any" name = "name" onchange ="check_name('name')" required>

                <label for="email">Email</label>
                <input type="email" placeholder="text@example.com" id="email" step = "any" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2, 4}$" name = "email" required>

                <label for="password">Password</label>
                <input type="password" placeholder="less than 20 characters" id="password" step = "any"  name = "password" onchange ="check_password('password')">

                <label for="cpassword"> Confirm Password</label>
                <input type="password" placeholder="less than 20 characters" id="cpassword" step = "any"  name = "cpassword" onchange ="check_cpassword('password', 'cpassword')" required>

                <button id = button type = "submit" value = "Create">Create</button>
                <a href="/login">Return to Login</a>
            </form>
        </div>

        <script>
            function check_name(input_value){
                var val = document.getElementById(input_value).value; 
                if(val.length > 20) {
                    alert('Please enter a username less than 20 characters');
                    var temp = document.getElementById(input_value);
                    temp.value = '';
                }
                if(val == ''){
                    alert('Please enter a username');
                    var temp = document.getElementById(input_value);
                    temp.value = '';
                }
            }

            function check_password(input_value){
                var val = document.getElementById(input_value).value; 
                console.log(val.length);
                if(val.length > 20) {
                    alert('Please enter password less than 20 characters');
                    var temp = document.getElementById(input_value);
                    temp.value = '';
                }
                if(val.length < 8){
                    alert('Please enter password greater than 8 characters');
                    var temp = document.getElementById(input_value);
                    temp.value = '';
                }
            }

            function check_cpassword(input_value, input_value2){
                check = false;
                var val = document.getElementById(input_value).value;
                var val2 = document.getElementById(input_value2).value;
                for(let i = 0; i<val.length; i++) {
                    if(val[i] != val2[i]) {
                        check = true;
                    }
                }
                if(check == true) {
                    alert('Please write same password');
                    var temp = document.getElementById(input_value2);
                    temp.value = '';
                }
                
            }
        </script>


